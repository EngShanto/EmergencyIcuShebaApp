<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending_Booking"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,VisualLintOverlap" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:id="@+id/pendingDataListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:ignore="RtlHardcoded,ScrollViewSize,VisualLintBounds">

            <TableRow >

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    android:text="SiNo."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    android:text="Patient Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    android:text="Patient Address"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    android:text="Patient Number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    android:text="Bead Type"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:text="Booking Date"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/table_border"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Booking Time"
                    android:background="@drawable/table_border"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:text="Number of Bade"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/table_border"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:text="Booking Status"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/table_border"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/header"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="Approve/Delete"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/table_border"
                    android:padding="4dp"
                    tools:ignore="HardcodedText" />
            </TableRow>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"/>
        </TableLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>