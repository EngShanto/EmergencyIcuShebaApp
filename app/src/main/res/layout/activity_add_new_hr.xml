<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back2"
    tools:context=".Add_New_HR"
    tools:ignore="VisualLintBounds">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/input_bg">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New HR"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textColor="@color/Blue"
                tools:ignore="HardcodedText,SpUsage" />

            <EditText
                android:id="@+id/Hr_Name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/blue_border"
                android:drawableStart="@drawable/baseline_person"
                android:drawablePadding="5dp"
                android:hint="HR_Name"
                android:padding="10sp"
                android:textColorHint="@color/Blue"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText,TextFields,TextSizeCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/Hr_Email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/blue_border"
                android:drawableStart="@drawable/baseline_email"
                android:drawablePadding="5dp"
                android:hint="HR_Email"
                android:padding="10sp"
                android:textColorHint="@color/Blue"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText,TextFields,TextSizeCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/Hr_Number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/blue_border"
                android:drawableStart="@drawable/baseline_call"
                android:drawablePadding="5dp"
                android:hint="Phone_Number"
                android:padding="10sp"
                android:textColorHint="@color/Blue"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText,TextFields,TextSizeCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/Hr_Password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/blue_border"
                android:drawableStart="@drawable/baseline_security"
                android:drawablePadding="5dp"
                android:hint="HR_Password"
                android:padding="10sp"
                android:textColorHint="@color/Blue"
                android:textSize="20sp"
                tools:ignore="Autofill,HardcodedText,TextFields,
                TextSizeCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/select"
                android:textColorHint="@color/Blue"
                app:hintTextColor="@color/material_dynamic_neutral80">

                <AutoCompleteTextView
                    android:id="@+id/Auto_complete_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:inputType="none"
                    android:padding="5sp"
                    android:textColorHint="@color/Blue"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize,TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/Hr_Add_Button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/baseline_security"
                android:drawablePadding="5dp"
                android:hint="Create"
                android:padding="5sp"
                android:shadowColor="@color/Blue"
                android:textAlignment="center"
                android:textColor="@color/Blue"
                android:textColorHighlight="@color/Blue"
                android:textColorHint="@color/black"
                android:textColorLink="@color/Blue"
                android:textSize="20sp"
                app:rippleColor="@color/Blue"
                app:strokeColor="@color/Blue"
                tools:ignore="Autofill,HardcodedText,TextFields,TextSizeCheck,VisualLintTextFieldSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Hr_Back"
                android:text="Back"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/Blue"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>