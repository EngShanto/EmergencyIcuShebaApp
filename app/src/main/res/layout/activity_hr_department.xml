<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HrDepartmentActivity"
    android:background="@drawable/back2">
    <include layout="@layout/hr_header" />
    <TextView
        android:id="@+id/Hr_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Icu Sheba"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Hospital_Tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Text"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hr_Title"
        app:layout_constraintVertical_bias="0.013"
        tools:ignore="HardcodedText,VisualLintOverlap" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:fillViewport="true"
        tools:ignore="UselessLeaf">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

            <GridLayout
                android:id="@+id/title_home"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:columnCount="2"
                android:rowCount="20"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card_View_1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hospital_icon"
                            tools:ignore="ContentDescription,ImageContrastCheck,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/Name1"
                            android:layout_width="140dp"
                            android:layout_height="35dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

                        <TextView
                            android:id="@+id/Address1"
                            android:layout_width="114dp"
                            android:layout_height="25dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/Number1"
                            android:layout_width="114dp"
                            android:layout_height="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TextContrastCheck" />
                        <TextView
                            android:id="@+id/Update_Button"
                            android:layout_width="114dp"
                            android:layout_height="25dp"
                            android:text="Update"
                            android:textAlignment="center"
                            android:textColor="@color/Navy"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TextContrastCheck" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Card_View_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/Booking_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="88dp"
                            android:layout_height="95dp"
                            android:src="@drawable/icons8_information_64"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/Booking_info"
                            android:layout_width="130dp"
                            android:textSize="16sp"
                            android:padding="4dp"
                            android:layout_height="wrap_content"
                            android:text="Booking Information"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Info_Type"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:padding="2dp"
                    android:text="Booking_Pending"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,TextSizeCheck" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/Booking_Search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="-2dp"
                    android:layout_toEndOf="@id/Info_Type"
                    android:background="@drawable/search_border"
                    app:closeIcon="@drawable/baseline_close_24"
                    app:searchIcon="@drawable/baseline_search_24"
                    app:submitBackground="@color/white"
                    tools:ignore="ObsoleteLayoutParam,TextSizeCheck" />  <!-- Align it to the right of Info_Type -->

            </LinearLayout>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="horizontal"
                    tools:ignore="UselessParent">

                 <TableLayout
                  android:id="@+id/pendingDataListView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                     android:padding="4dp"
                  tools:ignore="RtlHardcoded,ScrollViewSize">

                     <TableRow >

                         <TextView
                             android:layout_width="45dp"
                             android:layout_height="30dp"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             android:text="SiNo."
                             android:textAlignment="center"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             tools:ignore="HardcodedText,TextSizeCheck" />

                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             android:text="Patient Name"
                             android:textAlignment="center"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             tools:ignore="HardcodedText,TextSizeCheck" />

                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             android:text="Patient Address"
                             android:textAlignment="center"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             tools:ignore="HardcodedText,TextSizeCheck" />

                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             android:text="Patient Number"
                             android:textAlignment="center"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             tools:ignore="HardcodedText,TextSizeCheck" />

                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             android:text="Bead Type"
                             android:textAlignment="center"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             tools:ignore="HardcodedText,TextContrastCheck" />
                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:textAlignment="center"
                             android:text="Booking Date"
                             android:padding="4dp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:background="@drawable/table_border"
                             tools:ignore="HardcodedText" />
                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:textAlignment="center"
                             android:padding="4dp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:text="Booking Time"
                             android:background="@drawable/table_border"
                             tools:ignore="HardcodedText" />
                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:textAlignment="center"
                             android:text="Number of Bade"
                             android:padding="4dp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:background="@drawable/table_border"
                             tools:ignore="HardcodedText" />
                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:textAlignment="center"
                             android:text="Booking Status"
                             android:padding="4dp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:background="@drawable/table_border"
                             tools:ignore="HardcodedText" />
                         <TextView
                             android:layout_width="120dp"
                             android:layout_height="30dp"
                             android:text="Approve/Reject"
                             android:textColor="@color/black"
                             android:textAlignment="center"
                             android:textStyle="bold"
                             android:background="@drawable/table_border"
                             android:padding="4dp"
                             tools:ignore="HardcodedText" />
                     </TableRow>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"/>
            </TableLayout>
                </HorizontalScrollView>

    </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>